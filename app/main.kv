<BoxLayout>:
    orientation: 'vertical'
    padding: 8
    spacing: 8
    
    Label:
        text: 'Pizza do Papa'
    
    TextInput:
        hint_text: 'Digite seu nome'
    
    Spinner:
        text: 'Escolha um Sabor'
        values: 'Quatro queijos', 'Mussarela', 'Portuguesa', 'Calabresa', 'Frango catupiry', 'Crocante'
    
    Spinner:
        text: 'Esolha o tamanho'
        values: 'Broto', 'Média', 'Grande', 'Gigante'
    
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Escolha o tipo de pagamento'

        RadioButton:
            group: 'pagamento'
            text: 'À vista (espécie)'
            on_active: root.on_radio_button_active(self.active)

        RadioButton:
            group: 'pagamento'
            text: 'À vista (pix)'
            on_active: root.on_radio_button_active(self.active)

        RadioButton:
            group: 'pagamento'
            text: 'À vista (cartão de crédito)'
            on_active: root.on_radio_button_active(self.active)

        RadioButton:
            group: 'pagamento'
            text: 'Parcelado 2x cartão de crédito'
            on_active: root.on_radio_button_active(self.active)
     
    Button:
        text: 'Calcular'
        size_hint_y: None
        height: 40
        on_press: app.calcular_total(self)
    
    Label:
        text: ''
        halign: 'center'
    
    Button:
        text: 'Limpar Campos'
        size_hint_y: None
        height: 40
        on_press: app.limpar_campos(self)
    
    Button:
        text: 'Sair'
        size_hint_y: None
        height: 40
        on_press: app.stop()
